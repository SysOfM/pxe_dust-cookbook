default local
prompt 1
timeout 600
ontimeout local

label local
  localboot 0

label install
	kernel <%= @id %>/<%= @platform %>-installer/<%= @arch %>/linux
	append auto=true priority=critical interface=<%= @interface %> vga16fb.modeset=0 initrd=<%= @id %>/<%= @platform %>-installer/<%= @arch %>/initrd.gz netcfg/disabledhcp=false netcfg/no_default_route=true locale=en_US console-setup/ask_detect=false console-setup/layoutcode=us keyboard-configuration/xkb-keymap=us netcfg/get_hostname=<%= @hostname %> netcfg/get_domain=<%= @domain %> netcfg/chooseinterface=auto url=http://<%= @server_ipaddress %>/<%= @preseed %> DEBCONF_INTERFACE=noninteractive DEBCONF_DEBUG=5

IPAPPEND 2
